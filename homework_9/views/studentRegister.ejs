<!DOCTYPE html>
<html>
  <head>
    <title>Students</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <ul>
      <li><a href="/">На головну</a></li>
      <li><a href="/courses">Courses</a></li>
    </ul>
    <main>
      <h1>Register Student</h1>
      <form action="/student/register" method="POST" enctype="multipart/form-data">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required />

        <label for="age">Age:</label>
        <input type="number" name="age" id="age" required min="14" />

        <label for="averageGrade">Average Grade:</label>
        <input type="number" name="averageGrade" id="averageGrade" min="0" max="100" />

        <label for="courseId">Assign to Course (Optional):</label>
        <select name="courseId" id="courseId">
          <option value="">-- None --</option>
          <% courses.forEach(course => { %>
            <option value="<%= course._id %>"><%= course.title %></option>
          <% }); %>
        </select>

        <button type="submit">Register Student</button>
      </form>
    </main>
  </body>
</html>
