<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users List</title>
  <script src="/javascripts/RequestManager.js"></script>
  <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/main.css" />
</head>
<body>
  <%- include('sections/header') %>
  <h1>Users List</h1>
  <form action="/users" method="get">
    <input type="text" name="name" placeholder="Name" />
    <input type="number" name="age" placeholder="age" />
    <button type="submit">Filter</button>
    <a href="/users"> <button>Clear filters</button> </a>
  </form>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user._id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.type.title %></td>
          <td>
            <a href="/users/register/<%= user._id %>">Edit</a>
            <button
              onclick="RequestManager.deleteRequest('/users', '<%= user._id %>' )"
            >
              Delete
            </button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <% if (user) {%>
  <a href="/users/register">Add New User</a>
  <% } %>
</body>
</html>
