<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register User</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/main.css" />
</head>
<body>
  <h1><%= data && data._id ? 'Edit User' : 'Register User' %></h1>

  <% if (errors && errors.length > 0) { %>
    <div class="error-messages">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/users/register<%= data?.id ? '/' + data.id : '' %>" method="POST" enctype="multipart/form-data">
    <div>
      <label for="username">Username:</label>
      <input type="text" name="username" value="<%= data ? data.username : '' %>" required>
    </div>

    <div>
      <label for="email">Email:</label>
      <input type="email" name="email" value="<%= data ? data.email : '' %>" required>
    </div>

    <div>
      <label for="password">Password:</label>
      <input type="password" name="password" value="<%= data ? data.password : '' %>">
    </div>

    <div>
      <label for="type">Type:</label>
      <select id="type" name="type" required>
        <% types.forEach(type => { %>
          <option value="<%= type._id %>">
            <%= type.title %>
          </option>
        <% }) %>
      </select>
    </div>

    <button type="submit"><%= data && data._id ? 'Update' : 'Register' %></button>
  </form>
</body>
</html>
